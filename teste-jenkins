pipeline {
    agent any
    options { disableConcurrentBuilds() }
    environment {
        SVN_URL = 'https://svn.code.sf.net/p/acbr/code/trunk2/Projetos'
        DOCKER_IMAGE = 'ubuntu:latest'
    }
    stages {
        stage('Fontes SVN') {
            steps {
                script {
                    checkout([
                        $class: 'SubversionSCM',
                        locations: [[remote: SVN_URL]],
                        workspaceUpdater: [$class: 'UpdateWithCleanUpdater']
                    ])
                }
            }
        }
        stage('Teste Workspace') {
            agent {
                docker {
                    image DOCKER_IMAGE
                    args """
                        --privileged
                    """
                    reuseNode true
                }
            }
            steps {
                sh 'ls -lha'
                sh 'echo ${WORKSPACE}'
            }
        }
    }
}
