pipeline {
    agent any
    options { disableConcurrentBuilds() }
    environment {
        SVN_ACBR = 'https://svn.code.sf.net/p/acbr/code/trunk2/'
        DOCKER_IMAGE = 'matheusconf/lazarus-crossbuilder:lazarus-2.2.4-android'
    }
    parameters {
        string(
            name: 'RevSVN',
            defaultValue: '',
            description: 'Defina a revisão estável do SVN do ACBR (deixe vazio para a última revisão)'
        )
    }
    stages {
        stage('Sincroniza Fontes') {
            steps {
                script {
                    checkout([
                        $class: 'SubversionSCM',
                        locations: [
                            [remote: SVN_ACBR + params.RevSVN]
                        ],
                        workspaceUpdater: [$class: 'UpdateWithCleanUpdater']
                    ])
                }
            }
        }
        stage('Compila LPI') {
            agent {
                docker {
                    image "${DOCKER_IMAGE}"
                    args '--privileged -u 0'
                    reuseNode true
                }
            }
            steps {
                sh 'chmod 777 -R trunk2'
                sh 'bash stage_1.sh'
            }
        }
        stage('Compilando ACBrLibBase e Build .aar') {
            agent {
                docker {
                    image "${DOCKER_IMAGE}"
                    args '--privileged -u 0'
                    reuseNode true
                }
            }
            steps {
                sh 'bash stage_2.sh'
            }
        }
    }
}
