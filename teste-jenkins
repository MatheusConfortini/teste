pipeline {
    agent any
    options { disableConcurrentBuilds() }
    environment {
        SVN_PROJETOS = 'https://svn.code.sf.net/p/acbr/code/trunk2/Projetos'
        SVN_DLL = 'https://svn.code.sf.net/p/acbr/code/trunk2/DLLs'
        DOCKER_IMAGE = 'matheusconf/lazarus-crossbuilder:lazarus-2.2.4-android'
        SVN_REV = 

    }
    parameters {
    string(name: 'RevSVN',
      defaultValue: '',
      description: 'Defina a revisão estável do SVN do ACBR')
    }
    stages {
        stage('Fontes SVN') {
            steps {
                script {
                    checkout([
                        $class: 'SubversionSCM',
                        locations: [
                            [remote: SVN_PROJETOS + params.RevSVN],
                            [remote: SVN_DLL + params.RevSVN]
                        ],
                        workspaceUpdater: [$class: 'UpdateWithCleanUpdater']
                    ])
                }
            }
        }
        stage('Teste Workspace') {
            agent {
                docker {
                    image DOCKER_IMAGE
                    args '--privileged -u 0'
                    reuseNode true
                }
            }
            steps {
                sh 'chmod 777 build.sh'
                sh './build.sh'
            }
        }
    }
}
